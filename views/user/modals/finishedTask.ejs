<!-- Unfinished Tasks Modal -->

<div class="modal fade" id="finishedTaskModal-<%= task._id %>" tabindex="-1" aria-labelledby="finishedTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="finishedTaskModalLabel"><%= task.taskName %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p><%= task.description %></p>
                </div>

                <div class="d-flex bd-highlight">

                    <form class="me-auto bd-highlight" action="/task?_method=DELETE" method="POST">
                        <div class="mb-3 d-flex justify-content-start">
                            <button type="submit" class="btn btn-danger rounded-pill">Delete Task</button>
                        </div>

                        <input type="hidden" name="taskID" value=<%= task._id %>>
                    </form>

                    <div class="mb-3 bd-highlight">
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>