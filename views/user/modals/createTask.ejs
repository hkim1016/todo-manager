<!-- Modal to create a new task -->

<div class="modal fade" id="createTaskModal" tabindex="-1" aria-labelledby="createTaskModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create New Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="taskName" class="form-label">Name of Task</label>
                        <input type="text" class="form-control" id="taskName" required>
                    </div>

                    <div class="mb-3">
                        <label for="taskDesc" class="form-label">Task Summary</label>
                        <textarea class="form-control" id="taskDesc" rows="2"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="taskDesc" class="form-label">Task Description</label>
                        <textarea class="form-control" id="taskDesc" rows="5"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>