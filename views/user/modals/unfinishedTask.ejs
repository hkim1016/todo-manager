<!-- Unfinished Tasks Modal -->

<div class="modal fade" id="unfinishedTaskModal-<%= task._id %>" tabindex="-1" aria-labelledby="unfinishedTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="unfinishedTaskModalLabel"><%= task.taskName %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3 border border-dark p-4 pb-2">
                    <p><%= task.description %></p>
                </div>
                <form class="needs-validation" novalidate action="/task?_method=PUT" method="POST">
                    <!-- <div class="mb-3 d-flex justify-content-start">
                        <input type="checkbox" class="form-check-input" id="finished" name="taskFinished">
                        <label class="form-check-label ps-2" for="finished">Mark as Done?</label>
                    </div> -->

                    <div class="mb-3 d-flex justify-content-end">
                        <!-- <button type="submit" class="btn btn-primary rounded me-auto bd-highlight" value="Send Request">Finish Task</button> -->
                        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary rounded-pill">Finish Task</button>
                    </div>

                    <input type="hidden" name="taskID" value=<%= task._id %>>
                </form>
            </div>
        </div>
    </div>
</div>